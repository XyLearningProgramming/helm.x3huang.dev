# values.yaml for grafana/helm-charts loki-stack

# -------------------------------------------------------------------
# Disable every component except loki + promtail
# -------------------------------------------------------------------
test_pod:
  enabled: false

fluent-bit:
  enabled: false

filebeat:
  enabled: false

logstash:
  enabled: false

grafana:
  enabled: false

prometheus:
  enabled: false

# -------------------------------------------------------------------
# Local Loki (monolithic) server
# -------------------------------------------------------------------
loki:
  enabled: false
  # isDefault: true

  # # Tune CPU/memory requests & limits for production use.
  # # Supported by the underlying loki chart :contentReference[oaicite:1]{index=1}.
  # resources:
  #   requests:
  #     cpu: "50m"
  #     memory: "64Mi"
  #   limits:
  #     cpu: "500m"
  #     memory: "512Mi"

  # # (Optional) Enable persistence so your logs survive pod restarts
  # persistence:
  #   enabled: true
  #   size: 5Gi

  # # Health probes (inherited from the default loki-stack values)
  # readinessProbe:
  #   httpGet:
